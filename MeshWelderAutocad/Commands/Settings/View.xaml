<Window x:Class="MeshWelderAutocad.Commands.Settings.View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeshWelderAutocad.Commands.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="255">
    <Window.Resources>
        <Style x:Key="ComboBoxStyle"
           TargetType="ComboBox">
            <Setter Property="Margin"
                Value="2" />
            <Setter Property="Height"
                Value="25" />
            <Setter Property="Width"
                Value="250">
            </Setter>
            <Setter Property="HorizontalAlignment"
                Value="Left" />
        </Style>
        <Style x:Key="ButtonIconStyle"
           TargetType="Button">
            <Setter Property="VerticalAlignment"
                Value="Center" />
            <Setter Property="Margin"
                Value="2" />
            <Setter Property="VerticalAlignment"
                Value="Center"></Setter>
            <Setter Property="HorizontalAlignment"
                Value="Center"></Setter>
            <Setter Property="MinWidth"
                Value="20"></Setter>
        </Style>
        <Style x:Key="ButtonStyle"
           TargetType="Button">
            <Setter Property="VerticalAlignment"
                Value="Center" />
            <Setter Property="Margin"
                Value="2" />
            <Setter Property="Padding"
                Value="2"></Setter>
            <Setter Property="VerticalAlignment"
                Value="Center"></Setter>
            <Setter Property="HorizontalAlignment"
                Value="Center"></Setter>
            <Setter Property="MinWidth"
                Value="50"></Setter>
        </Style>
        <Style x:Key="TextBlockStyle"
           TargetType="TextBlock">
            <Setter Property="Width"
                Value="auto" />
            <Setter Property="Height"
                Value="25" />
            <Setter Property="VerticalAlignment"
                Value="Stretch" />
            <Setter Property="TextAlignment"
                Value="Justify" />
            <Setter Property="Margin"
                Value="2" />
        </Style>
        <Style x:Key="TextBoxStyle"
           TargetType="TextBox">
            <Setter Property="Width"
                Value="auto" />
            <Setter Property="Height"
                Value="25" />
            <Setter Property="VerticalAlignment"
                Value="Stretch" />
            <Setter Property="HorizontalAlignment"
                Value="Stretch" />
            <Setter Property="Margin"
                Value="5" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button Command="{Binding AddRowReserveCommand}"
                Style="{StaticResource ButtonIconStyle}"
                HorizontalAlignment="Left">
            <Button.Content>
                <Image Source="../../Resources/ButtonIcons/addIcon.png"
                   Width="20"
                   Height="20" />
            </Button.Content>
        </Button>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Диаметр"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Style="{StaticResource TextBlockStyle}"/>
            <TextBlock Text="R"
                       Grid.Column="1"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Style="{StaticResource TextBlockStyle}"/>
            <TextBlock Text="G"
                       Grid.Column="2"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Style="{StaticResource TextBlockStyle}"/>
            <TextBlock Text="B"
                       Grid.Column="3"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Style="{StaticResource TextBlockStyle}"/>
        </Grid>
        <ListView ItemsSource="{Binding Reserves}"
                  SelectedItem="{Binding SelectedReserve}"
                  SelectionMode="Single">
            <ListView.ItemTemplate> 
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding Diameter, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0" />
                        <TextBox Text="{Binding Red, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 Grid.Column="1"
                                 Margin="0" />
                        <TextBox Text="{Binding Green, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 Grid.Column="2"
                                 Margin="0" />
                        <TextBox Text="{Binding Blue, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 Grid.Column="3"
                                 Margin="0" />
                        <Button Command="{Binding DataContext.DeleteRowReserveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                Style="{StaticResource ButtonIconStyle}"
                                CommandParameter="{Binding}"
                                Grid.Column="4">
                            <Button.Content>
                                <Image Source="../../Resources/ButtonIcons/deleteIcon.png"
                                       Width="20"
                                       Height="20" />
                            </Button.Content>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Margin="0,10,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Style="{StaticResource ButtonStyle}"
                    Command="{Binding SaveCommand}">Сохранить</Button>
            <Button Style="{StaticResource ButtonStyle}"
                    Command="{Binding CancelCommand}">Отмена</Button>
        </StackPanel>
    </StackPanel>
</Window>
